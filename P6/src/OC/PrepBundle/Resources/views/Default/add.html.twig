{% extends "OCPrepBundle::layout.html.twig" %}
    {% block body %}
        {% set success = app.flashes('success') %}
        {% if success %}
            {% for message in success %}
                <div class="alert alert-success" id="bansuccess">{{ message }}</div>
            {% endfor %}
        {% endif %}
        <br/>
        <h1 class="text-center titleadd">Add SnowTrick</h1>
        <img src="{{ asset('pics/snow-mountain-works-wallpaper.jpg') }}" id="bg" alt="">
        <div class="well col-md-6 bg-info text-justify">
            {{ form_start(form) }}
                {{ form_row(form.name) }}
                {{ form_errors(form) }}
                {{ form_row(form.description) }}
                {{ form_errors(form) }}
                {{ form_row(form.Group) }}
            {% if is_granted('ROLE_ADMIN') %}
                <div class=" text-right" id="addgroup">
                    <a href="{{ path('oc_prep_group')}}" class="btn btn-success text-right">Edit Groups</a>
                </div>
            {% endif %}
            <br/>
                {{ form_row(form.picture) }}
                {{ form_errors(form) }}
                {{ form_row(form.video) }}
               <div class="has-error" >{{ form_errors(form) }}</div>
            <div class="text-right">
                {{ form_row(form.submit) }}
            </div>
            {{ form_end(form) }}
            <br/>
            <div class="text-right">
                <a href="#" id="add_picture" class="btn btn-primary text-right">Add Picture</a>
                <a href="#" id="add_video" class="btn btn-primary text-right">Add Video</a>
            </div>
            <br/>
            {# ... #}
        </div>
    {% endblock %}