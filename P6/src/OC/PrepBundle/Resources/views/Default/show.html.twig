{% extends "OCPrepBundle::layout.html.twig" %}
{% block body%}
    <section class="jumbotron text-center" style="
            background-image: url({{ asset('pics/alesia-kazantceva-362303.jpg') }});
            height:300px;
            background-repeat: no-repeat;
            background-size: cover;">
        <div class="container">
            <h1 class="jumbotron-heading text-muted" style="font-family: 'Princess Sofia', cursive;font-size: 180px;">SnowTricks</h1>
        </div>
    </section>
    <div class="container-fluid col-md-12" style="font-family: 'Book Antiqua', cursive; font-size: 40px; background-color: #7DA0B1 ">
        {% for t in trick %}
        <div class="row col-md-3  text-jus top5 bottom5">
            <h1>{{ t.name }}</h1>
        </div>
            <br/>
            <br/>
        <div class="row col-md-10 text-center">
            <p>{{ t.description }}</p>
        </div>
        {% endfor %}
    </div>
    <div class="container-fluid" style="background-color: #2b669a">
        <div class="row col-md-4" style="padding-top: 100px; padding-left: 350px">
            <div id="my_carousel" class="carousel slide mx-auto" data-ride="carousel" data-interval="3000">
                <ol class="carousel-indicators">
                    {% for p in picture %}
                        <li data-target="#my_carousel" data-slide-to="{{ loop.index0 }}" class="{% if loop.index0 == 0 %}active{% endif %}"></li>
                    {% endfor %}
                </ol>
                <div class="carousel-inner col-md-12 no-padding" role="listbox">
                    {% for p in picture %}
                        <div {% if loop.first %} class="carousel-item active" {% else %} class="carousel-item" {% endif %}>
                            <img class="d-block" alt="picture" src="{{ p.url }}" style="min-width: 350px; min-height: 300px; max-width: 500px; max-height: 500px"/>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
        <br/>
        <br/>
        <br/>
        <div class="row col-sm-2 text-center top10 bottom10" style="padding-left: 300px; align-content: center">
            <div id="my_carousel" class="carousel slide mx-auto" data-ride="carousel" data-interval="3000">
                <ol class="carousel-indicators">
                    {% for v in video %}
                        <li data-target="#my_carousel" data-slide-to="{{ loop.index0 }}" class="{% if loop.index0 == 0 %}active{% endif %}"></li>
                    {% endfor %}
                </ol>
                <div class="video video-responsive">
                    {% for v in video %}
                        <div {% if loop.first %} class="carousel-item active" {% else %} class="carousel-item" {% endif %}>
                            <a>
                               <iframe width="560" height="315" src="{{ v.url }}" frameborder="0" allowfullscreen></iframe>
                            </a>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
    <br/>
    <div class="container-fluid">
        <table class="table table-bordered table-hover">
            <thead class="table-info">
                <tr>
                    <th>Sender</th>
                    <th>Date</th>
                    <th>Message</th>
                </tr>
            </thead>
            {% for comments in paginaton %}
            <tbody>
                <tr>
                    <td>{{ comments.createdBy }}</td>
                    <td><span class="label-info">{{ comments.createdAt|date('d/m/Y H:i:s') }}</span></td>
                    <td>{{ comments.description }}</td>
                </tr>
            </tbody>
            {% endfor %}
        </table>
        {# display navigation #}
        <nav class="navbar navbar-light">
            {{ knp_pagination_render(paginaton) }}
        </nav>
        <br/>
        <br/>
        <br/>
        <div class="row col-md-offset-4">
            {{ form(form) }}
        </div>
    </div>
{% endblock %}
